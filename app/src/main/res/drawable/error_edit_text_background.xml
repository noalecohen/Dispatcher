<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:state_window_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/auth_focused_edit_text_stroke" />
            <corners android:radius="4dp" />
            <padding android:bottom="11dp" android:left="16dp" android:top="11dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/error_message" />
            <corners android:radius="4dp" />
            <padding android:bottom="11dp" android:left="16dp" android:top="11dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</selector>
